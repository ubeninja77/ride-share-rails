<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @passenger, class: passenger_form_class do |f| %>
<div>
  <%= f.label :passenger_name %>
  <%= f.text_field :name %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_num %>
</div>
  <%= f.submit submit_button_label, class: "form-button" %>

<% end %>