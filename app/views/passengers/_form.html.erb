
<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger, class: passenger_form do |f| %>
<%= f.label :name, "Name: " %>
<%= f.text_field :name %>
<%= f.label :phone_num, "Phone Number: " %>
<%= f.text_field :phone_num %>

<%= f.submit "Save Passenger", class: "passenger-form-save" %>

<% end %>