<main>
  <h1 class="list-h1">All Passengers</h1>

  <section id="passengers-trips-list">
    <table>
      <% @passengers.each do |passenger| %>
          <ul>
            <p> Passenger: <%= link_to passenger.name, passenger_path(passenger.id) %> <p>
            <li>
              <%= link_to "Edit", edit_passenger_path(passenger.id) %>
            </li>
            <li>
              <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Confirming you want to delete this passenger?" }, class: "index-delete-link" %>
            </li>
          </ul>
      <% end %>
    </table>
  </section>
</main> 